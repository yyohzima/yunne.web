{
  "name": "yunne.web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "lint:all": "yarn lint:app && yarn lint:ms",
    "lint:app": "eslint --fix 'packages/app/**/*.{js,ts,jsx,tsx}'",
    "lint:ms": "eslint --fix 'packages/mockserver/**/*.{js,ts}'",
    "gqlgen": "graphql-codegen-esm --config codegen.yml",
    "precommit": "lint-staged"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/app",
      "**/mockserver"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "precommit"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "yarn all:lint"
    ],
    "packages/schemas/*.graphql": [
      "yarn graphql-schema-linter ./packages/schemas/*.graphql"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.2.0",
    "@graphql-codegen/cli": "^2.16.0",
    "@graphql-codegen/typescript": "^2.7.2",
    "@graphql-codegen/typescript-operations": "^2.5.2",
    "@graphql-codegen/typescript-resolvers": "^2.7.2",
    "@graphql-codegen/typescript-urql": "^3.7.3",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.8.3",
    "prettier-plugin-organize-imports": "^3.2.1"
  },
  "dependencies": {
    "graphql": "^16.6.0",
    "graphql-schema-linter": "^3.0.1"
  }
}
